<% provide(:title, @user.user_name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.user_name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <%= render 'follow_form' if logged_in? %>
    </aside>
    <div class="col-md-8 user_profile">
        <p><span>Website :</span> <%= @user.website %></p>
        <p><span>Introduction :</span> <%= @user.introduction %></p>
    </div>
    <div class="col-md-12">
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <% @microposts.each do |micropost| %>
            <div class="col-md-4">
              <%= render 'microposts/photo',  micropost: micropost %>
            </div>
          <% end %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>